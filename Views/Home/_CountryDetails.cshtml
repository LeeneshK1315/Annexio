@model Annexio.Models.CountriesViewModel

<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">Country Details</h4>
    </div>
    <br/><br/>
    <div class="container">
        <div class="col-md-12 row">
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Country Name:</b>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.Details.name)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Capital:</b>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.Details.capital)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Total Population:</b>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.Details.population)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Currencies:</b>
                    </div>
                    <br /><br />
                    <div class="col-md-8">
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Code
                                    </th>
                                    <th>
                                        Symbol
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var currencies in Model.Details.currencies)
                                {
                                    <tr>
                                        <td>
                                            @currencies.name
                                        </td>
                                        <td>
                                            @currencies.code
                                        </td>
                                        <td>
                                            @currencies.symbol
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Languages:</b>
                    </div>
                    <br /><br />
                    <div class="col-md-8">
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Native Name
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Details.languages)
                                {
                                    <tr>
                                        <td>@item.name</td>
                                        <td>@item.nativeName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Borders:</b>
                    </div>
                    <br /><br />
                    <div class="col-md-8">
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>
                                        Country Code
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Details.borders)
                                {
                                    <tr>
                                        <td><a href="javascript:void(0);" class="countryDetail" data-country-id="@item">@item</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>