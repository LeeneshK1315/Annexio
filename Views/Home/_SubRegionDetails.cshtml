@model Annexio.Models.CountriesViewModel

<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">Subregion Details</h4>
    </div>
    <br /><br />
    <div class="container">
        <div class="col-md-12 row">
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Subregion Name:</b>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.SubRegions.name)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Total Population:</b>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.SubRegions.population)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Region Name:</b>
                    </div>
                    <div class="col-md-8">
                        <a data-dismiss="modal" data-toggle="modal" href="#regionDetailModal" class="regionDetail" data-region-id="@Model.SubRegions.Region">@Model.SubRegions.Region</a>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <b>Countries:</b>
                    </div>
                    <br /><br />
                    <div class="col-md-8">
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>
                                        Country Name
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var countries in Model.SubRegions.Countries)
                                {
                                    <tr>
                                        <td>
                                            <a data-dismiss="modal" data-toggle="modal" href="#countryDetailModal" class="countryDetail" data-country-id="@countries.alpha3Code">@countries.name</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

